@model Hops.Models.ViewModels.PaginationModel

@if (Model.NumberOfPages > 1)
{
    <br/>
    <nav class="d-print-none">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPageIndex > 1)
{
    <li class="page-item">
                    <a class="page-link" href="@(Model.PaginationUrl + (Model.CurrentPageIndex - 1))" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
}

            @for (int i = 1; i <= Model.NumberOfPages; i++)
{
    <li class="page-item @(Model.CurrentPageIndex == i ? "active" : string.Empty)">
                    <a class="page-link" href="@(Model.PaginationUrl + i)">@i</a>
                </li>
}

            @if (Model.CurrentPageIndex != Model.NumberOfPages)
{
    <li class="page-item">
                    <a class="page-link" href="@(Model.PaginationUrl + (Model.CurrentPageIndex + 1))" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
}
        </ul>
    </nav>
}