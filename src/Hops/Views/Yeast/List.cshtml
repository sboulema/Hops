@using Hops.Models;
@model ListModel<Yeast>

@{
    ViewBag.Title = "Yeasts";
}

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Lab</th>
                    <th>Temperature</th>
                    @if (Model.Pagination.SearchTerm.Equals("Inventory"))
                    {
                        <th class="col-xs-2">Amount</th>
                    }
                    <th class="d-print-none"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var yeast in Model.List)
                {
                    <tr>
                        <td><a href="/yeast/@yeast.Id">@yeast.Name</a></td>
                        <td>@(((YeastLabEnum)yeast.Lab).Wordify())</td>
                        <td>@Html.Raw(yeast.Temp())</td>
                        @if (Model.Pagination.SearchTerm.Equals("Inventory"))
                        {
                            <td>
                                <div class="input-group input-group-sm">
                                    <input type="number" step="1" min="0" class="form-control yeast-inv-amount" data-yeast-id="@yeast.Id" onchange="saveAmountInventory(this);">
                                    <span class="input-group-addon">g</span>
                                </div>
                            </td>
                        }
                        <td class="d-print-none"><span style="cursor: pointer;" class="yeast-inv float-right fal fa-star text-warning" aria-hidden="true" aria-label="star" data-yeast-id="@yeast.Id" onclick="save(this);"></span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("Pagination", Model.Pagination)

<script>
    $(function () {
        loadFromInventory();
    });
</script>